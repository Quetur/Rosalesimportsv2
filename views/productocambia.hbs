<head>
  <!-- Tailwind & FontAwesome para iconos -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com" />
</head>

<body class="bg-gray-50 font-sans">
  <div class="container mx-auto px-4 py-8">
    
    <!-- Header & Buscador -->
    <div class="flex flex-col md:flex-row justify-between items-center mb-8 gap-4 bg-white p-6 rounded-xl shadow-sm">
      <div class="relative w-full md:w-96">
        <span class="absolute inset-y-0 left-0 pl-3 flex items-center text-gray-400">
          <i class="fas fa-search"></i>
        </span>
        <input type="text" id="search" 
          class="block w-full pl-10 pr-3 py-3 border border-gray-200 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent outline-none transition-all" 
          placeholder="Buscar producto por título, categoría o descripción..." />
      </div>

      <button onclick="nuevoproducto()" 
        class="w-full md:w-auto bg-red-600 hover:bg-red-700 text-white font-bold py-3 px-6 rounded-lg transition-colors shadow-lg flex items-center justify-center gap-2">
        <i class="fas fa-plus"></i> Agregar Producto Nuevo
      </button>
    </div>

    <!-- Tabla de Productos -->
    <div class="bg-white rounded-xl shadow-md overflow-hidden">
      <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse" id="tabla">
          <thead>
            <tr class="bg-gray-100 text-gray-700 uppercase text-sm font-semibold">
              <th class="px-6 py-4">Imagen</th>
              <th class="px-6 py-4">Producto</th>
              <th class="px-6 py-4">Detalles</th>
              <th class="px-6 py-4">Categoría</th>
              <th class="px-6 py-4">Precio</th>
              <th class="px-6 py-4 text-center">Estado</th>
              <th class="px-6 py-4 text-center">Acciones</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-gray-100">
            {{#each data}}
            <tr class="hover:bg-gray-50 transition-colors">
              <td class="px-6 py-4">
                <div class="w-16 h-16 rounded-lg overflow-hidden bg-gray-100 border">
                  <img src="{{foto2}}" alt="{{titulo}}" class="w-full h-full object-cover" />
                </div>
              </td>
              <td class="px-6 py-4 font-medium text-gray-900">{{titulo}}</td>
              <td class="px-6 py-4">
                <p class="text-sm text-gray-600 line-clamp-1">{{prod_des}}</p>
                <span class="text-xs italic text-gray-400">{{nota}}</span>
              </td>
              <td class="px-6 py-4">
                <span class="px-3 py-1 bg-blue-50 text-blue-700 rounded-full text-xs font-semibold">
                  {{cat_des}}
                </span>
              </td>
              <td class="px-6 py-4 font-bold text-green-600">${{precio1}}</td>
              <td class="px-6 py-4 text-center">
                <a href="{{#if visible}}/destildar/{{id_producto}}{{else}}/tildar/{{id_producto}}{{/if}}" 
                   class="inline-block w-4 h-4 rounded-full shadow-sm transition-transform hover:scale-125 {{#if visible}}bg-green-500{{else}}bg-red-500{{/if}}"
                   title="{{#if visible}}Visible{{else}}Oculto{{/if}}">
                </a>
              </td>
              <td class="px-6 py-4">
                <div class="flex justify-center gap-2">
                  <a href="/modificarproducto/{{id_producto}}" 
                    class="p-2 text-blue-600 hover:bg-blue-50 rounded-lg transition-colors" title="Modificar">
                    <i class="fas fa-edit"></i>
                  </a>
                  <a href="/productodel/{{id_producto}}" 
                    class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors" title="Borrar">
                    <i class="fas fa-trash"></i>
                  </a>
                </div>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <!-- Scripts -->
  <script src="https://code.jquery.com"></script>
  <script src="https://cdn.jsdelivr.net"></script>

  <script>
    $(document).ready(function () {
      // Buscador optimizado
      $("#search").on("keyup", function () {
        var value = $(this).val().toLowerCase();
        $("#tabla tbody tr").filter(function () {
          $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1);
        });
      });
    });

    function nuevoproducto() {
      Swal.fire({
        title: 'Cargando formulario...',
        icon: 'info',
        showConfirmButton: false,
        timer: 1000,
        didOpen: () => { Swal.showLoading() }
      }).then(() => {
        window.location.href = "productonuevo";
      });
    }
  </script>
</body>
