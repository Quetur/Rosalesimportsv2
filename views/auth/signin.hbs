<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Acceso - RosalesImports</title>
    
    <!-- 1. CARGAR JQUERY PRIMERO PARA EVITAR EL ERROR "$" IS NOT DEFINED -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <style>
        :root {
            --primary-color: #0d6efd;
            --primary-hover: #0b5ed7;
            --bg-gradient: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-gradient);
            min-height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .login-card {
            background: #ffffff;
            width: 90%;
            max-width: 400px;
            padding: 35px 25px;
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
        }

        .brand-header { text-align: center; margin-bottom: 30px; }
        .brand-header h1 { color: var(--primary-color); font-weight: 800; font-size: 1.7rem; margin: 0; }
        .brand-header .divider { width: 40px; height: 3px; background: var(--primary-color); margin: 10px auto; border-radius: 2px; }
        .brand-header p { color: #6c757d; font-size: 0.8rem; text-transform: uppercase; letter-spacing: 1px; font-weight: 600; }

        .form-label { font-size: 0.75rem; font-weight: 700; color: #495057; margin-bottom: 6px; display: block; }

        .input-wrapper { position: relative; margin-bottom: 20px; }

        .form-control-custom {
            width: 100%;
            height: 50px;
            padding: 10px 45px 10px 15px;
            font-size: 1rem;
            border-radius: 10px;
            border: 1px solid #ced4da;
            box-sizing: border-box;
        }

        .btn-toggle-eye {
            position: absolute;
            right: 10px;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            cursor: pointer;
            font-size: 1.3rem;
            z-index: 10;
            padding: 5px;
        }

        .btn-submit {
            width: 100%;
            background: var(--primary-color);
            color: white;
            border: none;
            height: 50px;
            border-radius: 10px;
            font-size: 1rem;
            font-weight: 700;
            cursor: pointer;
            transition: background 0.2s;
        }

        .btn-submit:active { transform: scale(0.98); }
    </style>
</head>
<body>

<div class="login-card">
    <div class="brand-header">
        <h1>RosalesImports</h1>
        <div class="divider"></div>
        <p>Acceso al Sistema</p>
    </div>

    <form id="formlogin" method="post" action="/login">
        <div class="mb-3">
            <label class="form-label">USUARIO / DNI</label>
            <div class="input-wrapper">
                <input type="text" id="dni" name="dni" class="form-control-custom" placeholder="Ingrese su identificaci√≥n" autocomplete="off" inputmode="numeric">
                <input type="hidden" id="mdni">
            </div>
        </div>

        <div class="mb-4">
            <label class="form-label">CONTRASE√ëA</label>
            <div class="input-wrapper">
                <input type="password" id="pass" name="pass" class="form-control-custom" placeholder="‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢">
                <button type="button" id="btn-toggle" class="btn-toggle-eye">üëÅÔ∏è</button>
            </div>
        </div>

        <button type="button" id="btn-ingresar" class="btn-submit" onclick="ingresar()">
            INGRESAR
        </button>
    </form>
</div>

<script>
    // Aseguramos que el c√≥digo solo corra cuando jQuery est√© listo
    $(document).ready(function () {
        
        // Alerta del servidor
        if ("{{alert}}" === "true") {
            Swal.fire({ icon: 'error', title: 'USUARIO INCORRECTO', timer: 3000, showConfirmButton: false });
        }

        // Formateo de DNI
        $("#dni").on("input", function () {
            let val = $(this).val().replace(/\D/g, "");
            $("#mdni").val(val); 
            $(this).val(val.replace(/\B(?=(\d{3})+(?!\d))/g, "."));
        });

        // Ver contrase√±a corregido para m√≥vil
        $('#btn-toggle').on('click touchend', function(e) {
            e.preventDefault();
            const input = $('#pass');
            const isPass = input.attr('type') === 'password';
            input.attr('type', isPass ? 'text' : 'password');
            $(this).text(isPass ? 'üôà' : 'üëÅÔ∏è');
        });
    });

    // Funci√≥n global para que el onclick la encuentre siempre
    function ingresar() {
        // Verificamos si jQuery carg√≥ antes de usarlo
        if (typeof $ === 'undefined') {
            alert("Cargando sistema, por favor espere un segundo...");
            return;
        }

        const dniRaw = $("#mdni").val();
        const passVal = $("#pass").val();

        if (!dniRaw || dniRaw.length === 0) {
            Swal.fire({ icon: 'error', title: 'DNI Requerido', timer: 1500, showConfirmButton: false });
            $("#dni").focus();
            return;
        }
        if (!passVal || passVal.length === 0) {
            Swal.fire({ icon: 'error', title: 'Contrase√±a Requerida', timer: 1500, showConfirmButton: false });
            $("#pass").focus();
            return;
        }

        $("#btn-ingresar").prop("disabled", true).text("ENTRANDO...");
        $("#formlogin").submit();
    }
</script>

</body>
</html>
