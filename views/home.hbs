        const precioUnitario = parseFloat(document.getElementById('modal-precio').value) || 0;
        const cotizacionDolar = parseFloat(document.getElementById('modal-cotizacion-dolar').value) || 0;

        // Calculamos el total y aplicamos Math.round para eliminar decimales
        const total = Math.round(cantidad * precioUnitario * cotizacionDolar);

        // Lo mostramos formateado con puntos de miles (sin decimales por defecto al ser entero)
        document.getElementById('modal-subttl').innerText = total.toLocaleString('es-AR');
