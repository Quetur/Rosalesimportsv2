<script>
    // 1. Variable global para almacenar el valor y usarlo en cualquier funci칩n
    let valorDolarGlobal = 0;
    fetch('https://dolarapi.com/v1/dolares/cripto')
        .then(response => response.json())
        .then(data => {
            const dolarBlue = data.venta;
            const ventaConMargen = data.venta + 15;
            valorDolarGlobal = dolarBlue + 15; // Guardamos el valor globalmente

            // Seleccionamos todos los contenedores de precio
            const preciosDom = document.querySelectorAll('.precio-final');

            preciosDom.forEach(span => {
                // Obtenemos el precio base del atributo data
                const precioBase = parseFloat(span.getAttribute('data-base'));

                // Calculamos el total (Precio USD * D칩lar Blue + 20
                const precioCalculado = precioBase * ventaConMargen;

                // Formateamos con separador de miles y 2 decimales
                span.textContent = precioCalculado.toLocaleString('es-AR', {
                    minimumFractionDigits: 2,
                    maximumFractionDigits: 2
                });

                // Opcional: Cambiar el prefijo de "u$s" a "$" si ya est치 en pesos
                span.parentElement.innerHTML = `$ ${span.outerHTML}`;
            });
            console.log(`Cotizaci칩n dolar venta: ${dolarBlue.toFixed(2)}`);
            console.log(`Cotizaci칩n aplicada: ${ventaConMargen.toFixed(2)}`);
        })
        .catch(error => console.error('Error al obtener datos:', error));



    function abrirModal(btn) {
        document.getElementById('input-cantidad').value = 1
        const articulo = btn.dataset;
        console.log("Datos del producto seleccionado:", articulo);
        // Llenar datos
        document.getElementById('modal-id').value = articulo.id;
        document.getElementById('modal-titulo').textContent = articulo.titulo;
        document.getElementById('modal-precio').value = articulo.precioDolar;
        document.getElementById('modal-img').value = articulo.foto;
        document.getElementById('modal-img2').src = articulo.foto;
        document.getElementById('modal-cotizacion-dolar').value = valorDolarGlobal;
        console.log(` id: ${articulo.id} | titulo: ${articulo.titulo} | foto: ${articulo.foto} | Cantidad: ${articulo.cantidad} | Subtotal: ${articulo.precioDolar * valorDolarGlobal}`);
        // 1. Obtener valores de los inputs ocultos
        const precioBase = parseFloat(document.getElementById('modal-precio').value) || 0;
        const cotizacion = parseFloat(document.getElementById('modal-cotizacion-dolar').value) || 1;
        const cantidad = parseInt(document.getElementById('input-cantidad').value) || 1;

        // 2. Calcular el precio unitario en pesos
        const precioEnPesos = precioBase * cotizacion;

        // 3. Calcular subtotal (Cantidad * Precio en Pesos)
        const subtotal = precioEnPesos * cantidad;

        // 4. Mostrar el resultado formateado en modal-subttl

        document.getElementById('modal-subttl').innerText = subtotal.toLocaleString('es-AR', {
            minimumFractionDigits: 0,
            maximumFractionDigits: 0
        });
        // Mostrar modal
        const modal = document.getElementById("miModal");
        modal.style.display = "flex";

    }

    function cerrarModal() {
        const modal = document.getElementById("miModal");
        modal.style.display = "none";
    }

    // ASIGNACI칍N DE EVENTOS (Aseg칰rate de que esto corra despu칠s de cargar el DOM)
    document.addEventListener("DOMContentLoaded", () => {

        // Seleccionar todos los botones que cierran el modal
        const botonesCerrar = document.querySelectorAll(".close-btn, .btn-close");

        botonesCerrar.forEach(btn => {
            btn.onclick = cerrarModal;
        });

        // Cerrar al hacer clic fuera del contenido
        window.onclick = (event) => {
            const modal = document.getElementById("miModal");
            if (event.target == modal) {
                cerrarModal();
            }
        };
    });
</script>

<script>
